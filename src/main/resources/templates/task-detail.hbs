{{#partial "content"}}

   <p>Description: {{ task.description }}</p>
   <p>Department of this Section: {{ category.name }}</p>
   <h5>
       Section status:
       {{#if task.published }}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
       {{/if}}
   </h5>
   <p>
       <a href="/tasks/{{task.id}}/edit">Edit this Section</a><br>
       <a href="/categories/{{task.categoryId}}/tasks/{{task.id}}/delete">DELETE this Section</a>
   </p>

{{/partial}}

{{> layout.hbs}}
